<Window x:Class="poprigyn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:poprigyn"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image Source="\Resource\Попрыженок.png" Height="NaN" Margin="239,1,459,1" Width="NaN" RenderTransformOrigin="0.914,-0.565"/>
        <Label Content="Попрыженок" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Content="Добро пожаловать!" FontFamily="Comic Sans MS" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="1" FontSize="30" Width="296" FontWeight="Bold" Margin="0,2,0,0" Grid.RowSpan="2"  />
        <Button x:Name="Entry" Content="Войти" HorizontalAlignment="Center" Grid.Row="3" Margin="0,10,0,10" Width="124" Background="#FFF9969E" FontFamily="Comic Sans MS" Click="Entry_Click" />
    </Grid>
</Window>
